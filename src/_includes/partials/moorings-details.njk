<div id="map" style="width: 100%; height: 50vh;"></div>

<script>
  const map = L.map('map').setView([{{ lat_long }}], 17);

  const tiles = L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
    maxZoom: 19,
	  attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
  }).addTo(map);

    var marker{{ post.fileSlug }} = L.marker([{{ lat_long }}]).addTo(map);
    marker{{ post.fileSlug }}.bindPopup('{{post.data.title}}');

</script>

<dl class="grid region" role="list" data-rows="masonry" data-layout="50-50">
    <dt><strong>Lat/Long:</strong></dt><dd><a href="geo:{{ lat_long }}">{{ lat_long }}</a></dd>
    <dt><strong>Grid reference:</strong></dt><dd>{{ grid_reference }}</dd>
    <dt><strong>Address:</strong></dt><dd>{{ address }}</dd>
    <dt><strong>Travel time from Hautbois Centre:</strong></dt><dd>{{ travel_time }}</dd>
    <dt><strong>Parking:</strong></dt><dd>{{ parking }}</dd>
    <dt><strong>Toilets:</strong></dt><dd>{{ toilets }}</dd>
    <dt><strong>Mooring fee:</strong></dt><dd>{{ mooring_fee }}</dd>
    {% if telephone %}
    <dt><strong>Telephone:</strong></dt><dd><a href="tel:{{ telephone }}">{{ telephone }}</a></dd>
    {% endif %}
</dl>